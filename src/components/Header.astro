---
import HeaderLink from '@components/HeaderLink.astro'
import { BAND_NAME } from 'src/consts'
import BandLogo from '@components/BandLogo.astro'
import * as styles from './Header.css'
import SocialLink from '@components/navigation/socials/SocialLink.astro'
---

<header class={styles.bar}>
  <nav class={styles.nav}>
    <a class={styles.logo} href="/">
      <BandLogo classNames={styles.bandIcon} form="j" color="black" />
    </a>
    <div class={styles.internalLinks}>
      <HeaderLink href="#home">Home</HeaderLink>
      <HeaderLink href="#events">Auftritte</HeaderLink>
    </div>
    <div class={styles.externalLinks}>
      <SocialLink type="instagram" label="Instagram" />
      <SocialLink type="facebook" label="Facebook" />
      <SocialLink type="youtube" label="Youtube" />
    </div>
  </nav>
</header>