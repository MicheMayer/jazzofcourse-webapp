---
import type { DefaultComponentProps } from '@models'
import { Image } from 'astro:assets'
import BackgroundContentContainer from '@components/layout/BackgroundContentContainer.astro'
import { backgroundImage } from './BackgroundImageParallax.css'

interface Props extends DefaultComponentProps {
  image: ImageMetadata | Promise<{
    default: ImageMetadata
  }>,
  alt: string,
}
const {
  id,
  classNames,
  image,
  alt,
} = Astro.props
---

<BackgroundContentContainer id={id} class:list={[classNames]} isParallax={true}>
  <Image slot="background" class={backgroundImage} src={image} alt={alt} />
  <slot />
</BackgroundContentContainer>