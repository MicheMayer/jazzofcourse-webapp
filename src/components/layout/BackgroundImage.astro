---
import type { DefaultComponentProps } from "@models/index"
import {
  backgroundImage,
} from "./BackgroundImage.css"
import BackgroundContentContainer from '@components/layout/BackgroundContentContainer.astro'
import { Image } from 'astro:assets'

interface Props extends DefaultComponentProps {
  image:
    | ImageMetadata
    | Promise<{
        default: ImageMetadata;
      }>;
  alt: string;
}

const {
  id,
  classNames,
  image,
  alt,
} = Astro.props
---

<BackgroundContentContainer id={id} class:list={[classNames]} isParallax={false}>
  <Image slot="background" class={backgroundImage} src={image} alt={alt} />
  <slot />
</BackgroundContentContainer>
