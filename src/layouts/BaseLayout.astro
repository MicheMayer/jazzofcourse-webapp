---
import BaseHead from '@components/BaseHead.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { themesClasses } from '@styles/themes'
import * as styles from './BaseLayout.css.ts'

interface Props {
  title: string
  description: string
  image?: string
}

const { title, description, image = '/logos/band/full.png' } = Astro.props
---

<html lang="de">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <body class:list={[themesClasses.default, styles.wrapper]}>
    <Header classNames={styles.header} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
