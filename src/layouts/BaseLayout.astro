---
import BaseHead from '@components/BaseHead.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { themeClass } from '@styles/themes/defaultTheme.css'
import { typography, colors } from './BaseLayout.css.ts'

interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image } = Astro.props;
---

<html lang="de">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>

	<body class:list={[themeClass, typography, colors]}>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
